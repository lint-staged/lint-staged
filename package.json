{
  "name": "lint-staged",
  "description": "Lint files staged by git",
  "bin": "index.js",
  "engines": {
    "node": ">=4"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "pre-commit": "remove-lockfiles && node index.js",
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "deps": "npm-check -s",
    "deps:update": "npm-check -u"
  },
  "pre-commit": "pre-commit",
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "./testSetup.js"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "cosmiconfig"
    ]
  },
  "repository": "https://github.com/okonet/lint-staged",
  "keywords": [
    "lint",
    "git",
    "staged",
    "javascript",
    "css",
    "scss",
    "sass",
    "eslint",
    "stylelint",
    "code",
    "quality"
  ],
  "author": "Andrey Okonetchnikov <andrey@okonet.ru>",
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^2.0.0",
    "chalk": "^2.1.0",
    "cosmiconfig": "^1.1.0",
    "execa": "^0.8.0",
    "is-glob": "^4.0.0",
    "jest-validate": "^20.0.3",
    "listr": "^0.12.0",
    "lodash": "^4.17.4",
    "log-symbols": "^2.0.0",
    "minimatch": "^3.0.0",
    "npm-which": "^3.0.1",
    "p-map": "^1.1.1",
    "staged-git-files": "0.0.4",
    "stringify-object": "^3.2.0"
  },
  "devDependencies": {
    "babel-jest": "^20.0.0",
    "babel-preset-env": "^1.6.0",
    "commitizen": "^2.9.6",
    "consolemock": "^0.2.1",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.5.0",
    "eslint-config-okonet": "^5.0.1",
    "eslint-plugin-node": "^5.1.1",
    "jest": "^20.0.4",
    "jest-cli": "^20.0.4",
    "jsonlint": "^1.6.2",
    "npm-check": "^5.2.2",
    "pre-commit": "^1.1.3",
    "prettier": "1.5.3",
    "remove-lockfiles": "^1.1.1",
    "strip-ansi": "^3.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "version": "0.0.0-development"
}
