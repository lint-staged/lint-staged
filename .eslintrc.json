{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "extends": ["okonet", "plugin:node/recommended"],
  "plugins": ["node"],
  "rules": {
    "strict": ["error", "global"],
    "no-console": "off",
    "prefer-destructuring": [
      "error",
      {
        "VariableDeclarator": {
          "array": true,
          "object": true
        },
        "AssignmentExpression": {
          "array": false,
          "object": false
        }
      }
    ],
    "prettier/prettier": "off",
    "node/no-unsupported-features": ["error", "8.6.0"]
  }
}
